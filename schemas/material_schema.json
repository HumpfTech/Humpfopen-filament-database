{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "string_limit": {
            "maxLength": 1000
        },
        "material_type": {
            "$ref": "./material_types_schema.json"
        },
        "specific_slicer_settings": {
            "type": "object",
            "properties": {
                "profile_name": {
                    "type": "string",
                    "maxLength": 1000,
                    "description": "The name of the profile for this filament."
                },
                "overrides": {
                    "type": "object",
                    "description": "Key-value pairs for settings that should be overridden for this filament"
                },
                "first_layer_bed_temp": {
                    "type": "integer"
                },
                "first_layer_nozzle_temp": {
                    "type": "integer"
                },
                "bed_temp": {
                    "type": "integer"
                },
                "nozzle_temp": {
                    "type": "integer"
                }
            },
            "required": [
                "profile_name"
            ]
        },
        "slicer_settings": {
            "type": "object",
            "properties": {
                "prusaslicer": {
                    "$ref": "#/definitions/specific_slicer_settings"
                },
                "bambustudio": {
                    "$ref": "#/definitions/specific_slicer_settings"
                },
                "orcaslicer": {
                    "$ref": "#/definitions/specific_slicer_settings"
                },
                "cura": {
                    "$ref": "#/definitions/specific_slicer_settings"
                },
                "generic": {
                    "type": "object",
                    "description": "Generic options that will automatically be mapped to the correct config definition for each slicer.",
                    "properties": {
                        "first_layer_bed_temp": {
                            "type": "integer"
                        },
                        "first_layer_nozzle_temp": {
                            "type": "integer"
                        },
                        "bed_temp": {
                            "type": "integer"
                        },
                        "nozzle_temp": {
                            "type": "integer"
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "material": {
            "description": "The material type of the filament",
            "$ref": "#/definitions/material_type"
        },
        "default_max_dry_temperature": {
            "type": "integer"
        },
        "default_slicer_settings": {
            "$ref": "#/definitions/slicer_settings"
        }
    },
    "additionalProperties": false,
    "required": [
        "material"
    ]
}